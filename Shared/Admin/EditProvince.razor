@inject IJSRuntime JS
@inject IAddressProvinceService provinceService
@inject IToastService toastService


<div class="modal" tabindex="-1" role="dialog" id="taskModal-edit">
    <div class="modal-dialog" style="max-width: 500px" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold">Actualizar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm class="col-lg-10 col-md-10 mx-md-auto" Model="Province" OnValidSubmit="Update">
                    <!-- Errors here -->
                    <DataAnnotationsValidator />
                    <!-- End Errors -->
                    <!-- Form Group -->
                    <div class="checkout__input">
                        <label>Nombre<span>*</span></label>
                        <InputText Class="form-control" @bind-Value="@Province.Name" />
                        <ValidationMessage For="@(() => @Province.Name)" />
                    </div>
                    <div class="checkout__input">
                        <label>Precio<span>*</span></label>
                        <InputNumber Class="form-control" @bind-Value="@Province.Shipping_price" />
                        <ValidationMessage For="@(() => @Province.Shipping_price)" />
                    </div>
                    <!-- Button -->
                    <div class="row align-items-center mb-3 mt-3">
                        <div class="col-lg-12 col-sm-6 text-right">
                            <button type="button" class="secondary-btn transition-3d-hover" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="primary-btn transition-3d-hover">Actualizar</button>
                        </div>
                    </div>
                    <!-- End Button -->
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {

    [Parameter]
    public Address_Province Province { get; set; }
    [Parameter]
    public Action DataChanged { get; set; }

    private async Task CloseTaskModal()
    {
        await JS.InvokeAsync<object>("CloseModal", "taskModal-edit");
    }

    private async Task Update()
    {
        await provinceService.Update(Province);
        await CloseTaskModal();
        DataChanged?.Invoke();
    }

}
