@code{

    public List<Category> Categories { get; set; } = new List<Category>();
    public SearchObject Search_object { get; set; } = new SearchObject();


    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        Categories = await categoryService.GetAll();
    }

    private async Task ShowHide()
    {
        await JS.InvokeVoidAsync("hero__categories_ShowHide");
    }

    private async Task MobileMenuOpen()
    {
        await JS.InvokeVoidAsync("humberger__open");
    }

    private async Task MobileMenuClose()
    {
        await JS.InvokeVoidAsync("humberger__menu__overlay");
    }

    private void Search()
    {
        if (string.IsNullOrEmpty(Search_object.Text) || string.IsNullOrWhiteSpace(Search_object.Text))
            return;
        navi.NavigateTo("shop-grid/?category="+Search_object.Category+"&search_text="+Search_object.Text, true);
    }
}