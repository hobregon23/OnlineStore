@page "/shopping-cart"
@inject NavigationManager navi


<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Productos</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="shoping__cart__item">
                                    <img width="100" height="100" src="/img/sin_imagen.jpg" alt="">
                                    <h5>Vegetable’s Package</h5>
                                </td>
                                <td class="shoping__cart__price">
                                    $55.00
                                </td>
                                <td class="shoping__cart__quantity" style="font-size: 18px; color: #1c1c1c; font-weight: 700;">
                                    1
                                </td>
                                <td class="shoping__cart__total">
                                    $110.00
                                </td>
                                <td class="shoping__cart__item__close transition-3d-hover">
                                    <span class="icon_close" style="color: red"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="/shop-grid" class="primary-btn cart-btn">Continuar Comprando</a>
                    <a href="" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Actualizar
                    </a>
                </div>
            </div>
            <div class="col-lg-6">

            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Total del Carrito</h5>
                    <ul>
                        <li>Total a Pagar <span>$464.98</span></li>
                    </ul>
                    <a href="/checkout" class="primary-btn">PROCEDER A PAGAR</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->


@code{

    public List<Product> Products { get; set; } = new List<Product>();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        //
    }
}